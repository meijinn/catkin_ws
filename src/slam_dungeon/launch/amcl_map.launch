<?xml version="1.0"?>
<launch>
    <master auto="start"/>

    <!--  ************** Global Parameters ***************  -->
    <param name="/use_sim_time" value="false"/>
    <arg name="map" default="room"/>
    <!--  ************** urg_run ***************  -->
    <include file="$(find slam_dungeon)/launch/urg_run.launch"/>
    <!--  ************** laser_odometry ***************  -->
    <include file="$(find slam_dungeon)/launch/laser_odometry.launch"/>

    <!--  ************** Navigation ********************  -->
    <node pkg="move_base" type="move_base" respawn="true" name="move_base" output="screen">
        <rosparam file="$(find slam_dungeon)/param/amcl/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find slam_dungeon)/param/amcl/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find slam_dungeon)/param/amcl/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find slam_dungeon)/param/amcl/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find slam_dungeon)/param/amcl/teb_local_planner_params.yaml" command="load" />

        <param name="base_global_planner" value="global_planner/GlobalPlanner" />
        <param name="planner_frequency" value="2.0" />
        <param name="planner_patience" value="5.0" />

        <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
        <param name="controller_frequency" value="5.0"/>
        <param name="controller_patience" value="15.0"/>

        <param name="clearing_rotation_allowed" value="false"/>
    </node>

    <!--  ****************** amcl *********************  -->
    <node pkg="amcl" type="amcl" name="amcl">
        <rosparam file="$(find slam_dungeon)/param/amcl/amcl_params.yaml" command="load"/>
    </node>
    
    <!--  ****************** map_server *********************  -->
    <node if="$(eval map == 'room')" name="map_server" pkg="map_server" type="map_server" args="$(find slam_dungeon)/maps/$(arg map).yaml"/>
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find slam_dungeon)/rviz/rviz_amcl.rviz"/>

    <!-- <node pkg="navigation2d_example" type="2d_nav_goals.py" name="nav_goals_node" respawn="true" output="screen"/>
    <node pkg="uvc_camera" type="uvc_camera_node" name="mycam">
        <param name="device" type="string" value="/dev/video0"/>
        <param name="width" value="640" />
        <param name="height" value="480" />
        <param name="frame_rate" value="30" />
        <param name="video_mode" value="mjpeg" />
    </node> -->

    <node name="info_float32_publisher" pkg="slam_dungeon" type="info_float32_publisher" />
    <node name="info_overlay_text_publisher" pkg="slam_dungeon" type="info_overlay_text_publisher" />
</launch>