<?xml version="1.0"?>
<launch>
    <master auto="start"/>

    <arg name="map" default="test"/>

    <!--  ************** laser_odometry ***************  -->
    <include file="$(find urg_gmapping)/launch/laser_odometry.launch"/>
    <!--  ************** move_base ********************  -->
    <node pkg="move_base" type="move_base" respawn="true" name="move_base" output="screen">
        <rosparam file="$(find urg_gmapping)/param/amcl/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find urg_gmapping)/param/amcl/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find urg_gmapping)/param/amcl/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find urg_gmapping)/param/amcl/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find urg_gmapping)/param/amcl/teb_local_planner_params.yaml" command="load" />

    <param name="base_global_planner" value="global_planner/GlobalPlanner" />
    <param name="planner_frequency" value="value=1.0" />
    <param name="planner_patience" value="5.0" />

    <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
    <param name="controller_frequency" value="1.0"/>
    <param name="controller_patience" value="15.0"/>

    <param name="clearing_rotation_allowed" value="false"/>
    </node>

    <!--  ****************** amcl *********************  -->
    <!-- <node pkg="amcl" type="amcl" name="amcl">
        <rosparam file="$(find urg_gmapping)/param/carlike/amcl_params.yaml" command="load"/>
    </node> -->
    <node pkg="amcl" type="amcl" name="amcl">
        <param name="odom_model_type" value="diff"/>
        <param name="odom_alpha5" value="0.1"/>
        <param name="transform_tolerance" value="0.2" />
        <param name="gui_publish_rate" value="1.0"/>
        <param name="laser_max_beams" value="30"/>
        <param name="min_particles" value="500"/>
        <param name="max_particles" value="5000"/>
        <param name="kld_err" value="0.05"/>
        <param name="kld_z" value="0.99"/>
        <param name="odom_alpha1" value="0.2"/>
        <param name="odom_alpha2" value="0.2"/>
        <param name="odom_alpha3" value="0.8"/>
        <param name="odom_alpha4" value="0.2"/>
        <param name="laser_z_hit" value="0.5"/>
        <param name="laser_z_short" value="0.05"/>
        <param name="laser_z_max" value="0.05"/>
        <param name="laser_z_rand" value="0.5"/>
        <param name="laser_sigma_hit" value="0.2"/>
        <param name="laser_lambda_short" value="0.1"/>
        <param name="laser_lambda_short" value="0.1"/>
        <param name="laser_model_type" value="likelihood_field"/>
        <param name="laser_likelihood_max_dist" value="2.0"/>
        <param name="update_min_d" value="0.2"/>
        <param name="update_min_a" value="0.5"/>
        <param name="global_frame_id" value="map"/>
        <param name="base_frame_id" value="base_link"/>
        <param name="odom_frame_id" value="odom"/>
        <param name="resample_interval" value="1"/>
        <param name="transform_tolerance" value="1.0"/>
        <param name="recovery_alpha_slow" value="0.001"/>
        <param name="recovery_alpha_fast" value="0.1"/>
    </node>
    <node if="$(eval map == 'nitac')" name="map_server" pkg="map_server" type="map_server" args="$(find urg_gmapping)/$(arg map).yaml"/>
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find urg_gmapping)/rviz_cfg/rviz_amcl.rviz"/>
</launch>